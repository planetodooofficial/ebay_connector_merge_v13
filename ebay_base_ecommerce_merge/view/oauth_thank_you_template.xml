<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>
            <template id="thankyou_oauth">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure">
                            <div class="container">
                                <h1>Thank you!</h1>
                                <p>
                                    Your User Token is successfully added to the Ebay Instance
                                </p>
                            </div>
                            <section class="oe_dark">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12 text-center mt16 mb16">
                                            <a href="/" class="btn btn-primary btn-lg">Continue To Your Homepage</a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </t>
            </template>


            <template id="error">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure">
                            <div class="container">
                                <h1>Sorry!!</h1>
                                <p>
                                    Something went wrong..Please Try again.
                                </p>
                            </div>
                            <section class="oe_dark">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12 text-center mt16 mb16">
                                            <a href="/" class="btn btn-primary btn-lg">Continue To Your Homepage</a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </t>
            </template>
        </data>
</odoo>