<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_manifest_report" model="report.paperformat">
            <field name="name">Manifest Report Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10.00</field>
            <field name="margin_bottom">20.00</field>
            <field name="margin_left">7.00</field>
            <field name="margin_right">7.00</field>
            <field name="header_line" eval="False" />
            <!--<field name="header_spacing">35</field>-->
            <field name="dpi">90</field>
        </record>


        <record id="base_shipping_v13.base_manifest_report" model="ir.actions.report">
            <field name="paperformat_id" ref="base_shipping_v13.paperformat_manifest_report" />
        </record>
    </data>
</odoo>
